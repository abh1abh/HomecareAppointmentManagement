@model IEnumerable<Appointment>

<div class="container">
    <table class='table table-striped'>
        <tr>
            <th>AppointmentId</th>
            <th>Client</th>
            <th>Healthcare Person</th>
            <th>Start</th>
            <th>End</th>
            <th>Notes</th>
        </tr>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Id</td>
                <td>@appointment.Client.Name</td>
                <td>@appointment.HealthcareWorker.Name</td>
                <td>@appointment.Start</td>
                <td>@appointment.End</td>
                <td>@appointment.Notes</td>
                <td class="text-nowrap">
                    <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                    <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>