@model AppointmentTaskViewModel

<div class="task-row form-group d-flex gap-2 align-items-start mb-2">
  <div class="flex-grow-1">
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>
  <button type="button" class="btn btn-outline-danger remove-task" aria-label="Remove task">Remove</button>
</div>