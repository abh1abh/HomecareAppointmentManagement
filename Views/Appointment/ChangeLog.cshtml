@model IEnumerable<ChangeLog>
@{
    ViewData["Title"] = "Change Log";
}

<h2 class="mb-2">Change Log</h2>
<p class="text-muted">@ViewBag.AppointmentSummary</p>

@if (!Model?.Any() ?? true)
{
    <p class="text-muted">No changes recorded yet.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-striped align-middle">
            <thead>
                <tr>
                    <th style="width:20%">When (UTC)</th>
                    <th style="width:15%">By (UserId)</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var log in Model!)
            {
                <tr>
                    <td>@log.ChangeDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@log.ChangedByUserId</td>
                    <td>@log.ChangeDescription</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

<div class="mt-3">
    <a asp-action="Details" asp-route-id="@((Model?.FirstOrDefault()?.AppointmentId) ?? 0)" class="btn btn-secondary">Back to details</a>
</div>
