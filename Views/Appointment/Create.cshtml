@model AppointmentCreateViewModel

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    @if (Model.IsAdmin && Model.Clients != null)
    {
        <div class="form-group">
            <label asp-for="SelectedClientId">Choose client</label>
            <select asp-for="SelectedClientId" class="form-control">
                <option value="">-- Select a client --</option>
                @foreach (var client in Model.Clients)
                {
                    <option value="@client.ClientId">
                        @($"{client.ClientId} ({client.Name})")
                    </option>
                }
            </select>
            <span asp-validation-for="SelectedClientId" class="text-danger"></span>
        </div>
    }

    <div class="form-group">
        <label for="SelectedSlotId">Choose an available slot</label>
        <select asp-for="SelectedSlotId" class="form-control">
            <option value="">-- Select a slot --</option>
            @foreach (var s in Model.Slots)
            {
                <option value="@s.Id">
                    @($"{s.Start:g} - {s.End:t} (Worker #{s.HealthcareWorkerId})")
                </option>
            }
        </select>
        <span asp-validation-for="SelectedSlotId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

     <!-- Tasks -->
    <div class="form-group">
        <label asp-for="AppointmentTasks[0].Description">Task description</label>
        <input asp-for="AppointmentTasks[0].Description" class="form-control" />
        <span asp-validation-for="AppointmentTasks[0].Description" class="text-danger"></span>
    </div>
    @* Optional: if you want to post IsCompleted as false explicitly *@
    <input type="hidden" name="AppointmentTasks[0].IsCompleted" value="false" />

    <button type="submit" class="btn btn-primary">Create appointment</button>


</form>