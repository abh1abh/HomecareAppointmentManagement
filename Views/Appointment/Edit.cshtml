@model HomecareAppointmentManagment.ViewModels.AppointmentEditViewModel
@{
    ViewData["Title"] = "Edit Appointment";
}

<h2 class="mb-3">Edit Appointment</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="card mb-4">
        <div class="card-header">Appointment (read-only)</div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Client</dt>
                <dd class="col-sm-9">@Model.ClientName</dd>

                <dt class="col-sm-3">Healthcare worker</dt>
                <dd class="col-sm-9">@Model.HealthcareWorkerName</dd>

                <dt class="col-sm-3">Start</dt>
                <dd class="col-sm-9">@Model.Start.ToString("g")</dd>

                <dt class="col-sm-3">End</dt>
                <dd class="col-sm-9">@Model.End.ToString("g")</dd>
            </dl>
            <p class="text-muted mb-0">
                Time, client and worker are fixed and cannot be changed here.
            </p>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Tasks</span>
            <button type="button" id="add-task" class="btn btn-sm btn-outline-primary">Add task</button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0" id="tasks-table">
                    <thead>
                        <tr>
                            <th style="width:65%">Description</th>
                            <th style="width:20%">Completed</th>
                            <th style="width:15%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @* Hidden Id for the single task *@
                            <input type="hidden" asp-for="AppointmentTasks[0].Id" />
                            <td>
                                <input class="form-control" asp-for="AppointmentTasks[0].Description" />
                                <span class="text-danger" asp-validation-for="AppointmentTasks[0].Description"></span>
                            </td>
                            <td class="align-middle">
                                <input class="form-check-input" asp-for="AppointmentTasks[0].IsCompleted" />
                                <label class="form-check-label" asp-for="AppointmentTasks[0].IsCompleted"></label>
                                @* Hidden false value so unchecked posts "false" *@
                                <input type="hidden" name="AppointmentTasks[0].IsCompleted" value="false" />
                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>
            <div class="p-3">
                <small class="text-muted">You can add, edit, mark complete, or remove tasks.</small>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>

