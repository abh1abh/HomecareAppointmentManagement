@using HomecareAppointmentManagment.Infrastructure
@model HomecareAppointmentManagment.Models.AvailableSlot

<h2>Create New Available Slot</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (User.IsInRole("Admin"))
    {
        <div class="form-group">
            <label asp-for="HealthcareWorkerId" class="control-label"></label><span class="text-danger">*</span>
            <input asp-for="HealthcareWorkerId" class="form-control" />
            <span asp-validation-for="HealthcareWorkerId" class="text-danger"></span>
        </div>
    }
    else
    {
        @* Hide the field for workers; value will be set server-side *@
        <input type="hidden" asp-for="HealthcareWorkerId" />
    }

    <div class="form-group">
        <label asp-for="Start" class="control-label"></label><span class="text-danger">*</span>
        <input asp-for="Start" type="datetime-local" class="form-control" />
        <span asp-validation-for="Start" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="End" class="control-label"></label><span class="text-danger">*</span>
        <input asp-for="End" type="datetime-local" class="form-control" />
        <span asp-validation-for="End" class="text-danger"></span>
    </div>

    @* Creating a slot should generally start as not booked *@
    <input type="hidden" asp-for="IsBooked" value="false" />

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

