@using HomecareAppointmentManagment.Infrastructure
@model HomecareAppointmentManagment.Models.AvailableSlot

@{
    ViewData["Title"] = "Edit Available Slot";
    var isAdmin = User.IsAdmin();
    var lockTime = !isAdmin && Model.IsBooked; // worker + booked => lock Start/End
}

<h2 class="mb-3">Edit Available Slot</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="HealthcareWorkerId" />

    <div class="form-group mb-3">
        <label class="form-label">Healthcare worker</label>
        <div class="form-control-plaintext">
            @(Model.HealthcareWorker?.Name ?? $"Id: {Model.HealthcareWorkerId}")
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Start" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="Start" type="datetime-local" class="form-control" disabled="@lockTime" />
        <span asp-validation-for="Start" class="text-danger"></span>
        @if (lockTime) { <input type="hidden" asp-for="Start" /> }
    </div>

    <div class="form-group mb-3">
        <label asp-for="End" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="End" type="datetime-local" class="form-control" disabled="@lockTime" />
        <span asp-validation-for="End" class="text-danger"></span>
        @if (lockTime) { <input type="hidden" asp-for="End" /> }
    </div>

    <div class="mb-3">
        <label class="form-label">Booked</label>
        <div>
            @if (isAdmin)
            {
                <input asp-for="IsBooked" class="form-check-input" id="isBooked" />
                <label for="isBooked" class="ms-2">Set booked</label>
            }
            else
            {
                <span class="badge bg-@(Model.IsBooked ? "danger" : "success")">
                    @(Model.IsBooked ? "Yes" : "No")
                </span>
                <input type="hidden" asp-for="IsBooked" />
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@* Workers: show a dedicated Cancel Booking button when booked *@
@if (!isAdmin && Model.IsBooked)
{
    <form asp-action="Cancel" method="post" class="d-inline ms-2">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-outline-warning">Cancel booking</button>
    </form>
}
